#!/usr/bin/env php
<?php

use Qafoo\Game;

require_once __DIR__ . '/../../vendor/autoload.php';

$notAWinner;

$aGame = new Game(new PrintGameEvents());

$aGame->add("Chet");
$aGame->add("Pat");
$aGame->add("Sue");

do {
    $aGame->roll(rand(0, 5) + 1);

    if (rand(0, 9) == 7) {
        $notAWinner = $aGame->wrongAnswer();
    } else {
        $notAWinner = $aGame->wasCorrectlyAnswered();
    }
} while ($notAWinner);
